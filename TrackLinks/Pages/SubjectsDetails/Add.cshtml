@page
@model TrackLinks.AddModel
@{
    ViewData["Title"] = "Add";
}


    <h3 class="alert-info p-2">link details</h3>

<div class="border container shadow-sm" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="subjectDetail.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="subjectDetail.Description" class="form-control" />
            </div>
            <span asp-validation-for="subjectDetail.Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="subjectDetail.Priority"></label>
            </div>
            <div class="col-6">
                <input asp-for="subjectDetail.Priority" class="form-control" />
            </div>
            <span asp-validation-for="subjectDetail.Priority" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="subjectDetail.Link"></label>
            </div>
            <div class="col-6">
                <input asp-for="subjectDetail.Link" class="form-control" />
            </div>
            <span asp-validation-for="subjectDetail.Link" class="text-danger"></span>
        </div>


        
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Add"
                       class="btn btn-primary form-control"
                       asp-page="Subjects/Index"
                       />
            </div>
            <div class="col-3">
                <a asp-page="sDetails" asp-route-id="@Model.Val" class="btn btn-success form-control">Back to List</a>
            </div>
            <span >@Model.Val</span>
        </div>
        

    </form>
</div>

